<h3>Bewertung für <%= @movie.title %></h3>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Sterne</th>
			<th>Kommentar</th>
		</tr>
	</thead>
	<tbody>
		<% @reviews.each do |review| %>
			<tr>
				<td><%= review.name %></td>
				<td><%= review.stars %></td>
				<td><%= review.comment %></td>
				<td><%= link_to "<i class='fi-trash icon-red'></i>".html_safe, movie_review_path(@movie.id, review.id), method: :delete, data: {confirm: "Wirklich löschen"} %></td>
			</tr>
		<% end %>
	</tbody>
</table>