<p id="notice"><%= notice %></p>
<table>
  <td><p><%= image_for(@movie) %>
        </p>
    <th>

        <p>
          <strong>Title:</strong>
          <%= @movie.title %>
        </p>

        <p>
          <strong>Rating:</strong>
          <%= @movie.rating %>
        </p>

        <p>
          <strong>Total gross:</strong>
          <%= @movie.total_gross %>
        </p>

        <p>
          <strong>Descreption:</strong>
          <%= @movie.descreption %>
        </p>

        <p>
          <strong>Released on:</strong>
          <%= @movie.released_on %>
        </p>
    </th>
  </td>
</table>


<%= link_to "<i class='fi-pencil icon-green'></i>".html_safe, edit_movie_path(@movie) %> |
<%= link_to "<i class='fi-arrow-left icon-green'></i>".html_safe, movies_path %> | 
<%= link_to "<i class='fi-trash icon-red'></i>".html_safe, movie_path(@movie), method: :delete, data: {confirm: 'Möchten Sie Wirklich löschen?' } %>
