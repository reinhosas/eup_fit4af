<table>
	<thread>
			<tr>
			<th>Title</th> 
			<th>Description</th> 
			<th>Date</th> 
			</tr>
	</thread>
	<tbody>
		<% @contents.each do | var | %>
			<tr>
				<td><%= var.title %></td>
				<td><%= var.description %></td>
				<td><%= var.date %></td>
				<td><%= link_to "Show", content_path(var.id) %></td>
				<td><%= link_to "Edit", edit_content_path(var.id) %></td>
				<td><%= link_to "Destroy", content_path(var.id), method: :delete, data: {confirm: "Sind sie sicher?"} %></td>
			</tr>
		<% end %>
	</tbody>
</table>

