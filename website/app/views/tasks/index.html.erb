<p id="notice"><%= notice %></p>

<h1>Listing Tasks for <%= @content.title %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.date %></td>
        <td><%= link_to 'Show', content_task_path(@content.id, task.id) %></td>
        <td><%= link_to 'Edit', edit_content_task_path(@content.id, task.id) %></td>
        <td><%= link_to 'Destroy', content_task_path(@content.id, task.id), method: :delete, data: { confirm: 'sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_content_task_path(@content.id) %>
