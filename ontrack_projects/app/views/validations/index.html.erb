<p id="notice"><%= notice %></p>

<h1>Listing Validations for <%= @project.title %></h1>
<p>Ranking: <%= create_ranking(@project) %></p>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Comment</th>
      <th>Username</th>
      <th>Ranking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @validations.each do |validation| %>
      <tr>
        <td><%= validation.project_id %></td>
        <td><%= validation.comment %></td>
        <td><%= validation.username %></td>
        <td><%= create_text(validation) %></td>
        <td><%= show_stars(validation) %></td>
        <td><%= link_to 'Show', project_validation_path(@project.id, validation.id) %></td>
        <td><%= link_to 'Edit', edit_project_validation_path(@project.id, validation.id) %></td>
        <td><%= link_to 'Destroy', project_validation_path(@project.id, validation.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Validation', new_project_validation_path(@project.id) %>
